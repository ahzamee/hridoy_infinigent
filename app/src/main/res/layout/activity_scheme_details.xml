                    android:id="@+id/is_written_record_available_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="হ্যাঁ"
                    android:textSize="20dp" />

                <RadioButton
