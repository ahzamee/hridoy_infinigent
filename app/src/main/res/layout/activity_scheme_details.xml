<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_backdrop_height"
        android:fitsSystemWindows="true"
        android:theme="@style/Theme.InfinigentConsulting.NoActionBar">


        <ImageView
            android:id="@+id/backdrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/banner" />


    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_anchorGravity="center"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="30dp"
            android:weightSum="14"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="আপনি কি বর্তমান স্কিম সম্পর্কে অবহিত ?"
                android:textSize="20dp"
                android:textStyle="bold" />

            <!-- add RadioGroup which contain the many RadioButton-->
            <RadioGroup
                android:id="@+id/is_known_about_scheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <!-- In RadioGroup create the 1 Radio Button-->
                <!-- like this we will add some more Radio Button-->
                <RadioButton
                    android:id="@+id/is_known_about_scheme_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="হ্যাঁ"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/is_known_about_scheme_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="না"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/is_known_about_scheme_not_required"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="প্রযোজ্য না"
                    android:textSize="20dp" />

                />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="( যদি হ্যা ) বর্তমান স্কিমটি কি ?"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/present_scheme_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="আপনি কিভাবে স্কিম সম্পর্কে জানতে পারেন ?"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/scheme_media_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="আপনি কি স্কিম মোতাবেক পণ্য/ সুবিধা পেয়েছেন ?"
                android:textSize="20dp"
                android:textStyle="bold" />

            <!-- add RadioGroup which contain the many RadioButton-->
            <RadioGroup
                android:id="@+id/is_facilitated_by_scheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <!-- In RadioGroup create the 1 Radio Button-->
                <!-- like this we will add some more Radio Button-->
                <RadioButton
                    android:id="@+id/is_facilitated_by_scheme_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="হ্যাঁ"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/is_facilitated_by_scheme_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="না"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/is_facilitated_by_scheme_not_required"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="প্রযোজ্য না"
                    android:textSize="20dp" />

                />
            </RadioGroup>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="কবে পেয়েছেন ?"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <CheckBox
                    android:id="@+id/date_of_scheme_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ম্যানুয়াল"/>

            </LinearLayout>

            <DatePicker
                android:id="@+id/date_of_scheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="আপনি যে পণ্য অথবা সুবিধা পেয়েছেন তার কোন লিখিত রেকর্ড/ চালান পেয়েছেন কিনা ?"
                android:textSize="20dp"
                android:textStyle="bold" />

            <!-- add RadioGroup which contain the many RadioButton-->
            <RadioGroup
                android:id="@+id/is_written_record_available"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <!-- In RadioGroup create the 1 Radio Button-->
                <!-- like this we will add some more Radio Button-->
