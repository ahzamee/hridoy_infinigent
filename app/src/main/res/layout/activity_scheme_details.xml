                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="না"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/is_written_record_available_not_required"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="প্রযোজ্য না"
                    android:textSize="20dp" />

                />
            </RadioGroup>

            <LinearLayout
